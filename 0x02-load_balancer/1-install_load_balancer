#!/usr/bin/env bash
# comment goes here

sudo apt-get -y update
sudo apt-get -y upgrade
sudo apt-get -y install haproxy

FILE= /etc/haproxy/haproxy.cfg
STR= "listen appname :80\n\tmode http\n\tbalance roundrobin\n\tserver gc-3411-web-01 ubuntu@35.231.120.54:80 check\n\tserver gc-3411-web-02 ubuntu@34.139.69.101:80 check"
sudo echo -e STR | sudo tee -a $FILE
sudo service haproxy restart
