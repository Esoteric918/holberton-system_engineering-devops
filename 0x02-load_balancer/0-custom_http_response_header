#!/usr/bin/env bash
# Custome header X-Served-By
SRC="/etc/nginx/sites-available/default"
REDIC="\\\tlocation /redirect_me {\n\t\t return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n"
HDR="\\n\tadd_header X-Served-By \$HOSTNAME;\n"
sudo apt-get -y update
sudo apt-get -y  install nginx
sudo service nginx start
echo 'Hello World' | sudo tee /var/www/html/index.html
sudo ufw allow nginx
sudo -ie sed "30i $REDIC" $SRC
sudo -ie sed $HDR
sudo service nginx restart
