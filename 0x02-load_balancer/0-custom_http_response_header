#!/usr/bin/env bash
# Custome header X-Served-By
sudo apt-get -y update
sudo apt-get -y  install nginx
sudo service nginx start
HDR="\tadd_header X-Served-By $HOSTNAME;\n"
echo 'Hello World' | sudo tee /var/www/html/index.html
sudo ufw allow nginx
SRC="\tlocation / {"
REDIC="\\\$HDR;\n\n\tlocation /redirect_me {\n\t\t return 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}\n\n\tlocation / {"
sudo sed -i "s@^$SRC@$REDIC@$HDR" /etc/nginx/sites-available/default
sudo service nginx restart
